pipeline
{
    agent any
    stages
    {
        stage('Build')
        {
            steps
            {
             echo 'Build App'
            }
         }
         stage('Test')
        {
            steps
            {
             echo 'Test App'
            }
         }
         stage('Deploy')
        {
            steps
            {
             echo 'Deploy App'
            }
         }
    }
    post
    {
       always
       {
          emailext body: 'Status of the jenkins pipeline :', subject: 'Jenkins Pipeline Update', to: '
thorbolenisha07@gmail.com
'
       }
    }
}
